<%
  totalAmount = 0
%>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Product</th>
    <th>Price</th>

  </tr>
  </thead>
  <tbody>


  <% for listCart in @cart do %>

    <tr>
      <td><%=h Product.find(listCart.product_id).name %></td>
      <td>$ <%=h Product.find(listCart.product_id).price  %></td>
      <td><a href="/temporders/<%= listCart.id %>" class="glyphicon glyphicon-remove"></a></td>
      <td><%= link_to 'Delete', temporders_path(listCart.id), method: :delete %>

      </td>




       <% totalAmount = totalAmount + Product.find(listCart.product_id).price %>

  <% end %>




  </tbody>


</table>

<h2>Total Price : $ <%= totalAmount %></h2>